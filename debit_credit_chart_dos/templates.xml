<openerp>
    <data>

       <record id="account_move_line_custom_dos_tree_view" model="ir.ui.view">
            <field name="name">account_move_line_custom_dos_tree_view</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='credit']" position="after">
                    <field name="difference_dr_cr"/>
                </xpath>
            </field>
        </record>

       <record id="account_move_line_custom_dos_form_view" model="ir.ui.view">
            <field name="name">account_move_line_custom_dos_form_view</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='credit']" position="after">
                    <field name="difference_dr_cr"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
